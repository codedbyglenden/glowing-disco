{
  "compilerOptions": {
    "strict": false,
    "skipLibCheck": true,
	"esModuleInterop": true,
	"declaration": true,
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution":"node",
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "lib": [
      "ESNext",
      "dom"
    ],
	"baseUrl": "./assets/src/",
	"paths": {
	  "@components/*": ["tsx/components/*"],
	}
  },
  "include": [
    "assets/src/tsx/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}

