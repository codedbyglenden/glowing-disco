{
  "name": "mcb",
  "version": "1.0.0",
  "description": "A custom block repo",
  "private": false,
  "browserslist": [
    ">0.3%",
    "not ie 11",
    "not dead",
    "not op_mini all"
  ],
  "scripts": {
    "test-all": "stylelint 'assets/src/scss/**/*.scss' && eslint assets/src/**/*.ts && phpcbf -p -v . --standard=./phpcs.xml.dist --extensions=php --ignore=/vendor,/node_modules,/tribe,/tribe-events $PWD && phpcs -p -s -v -n . --standard=phpcs.xml.dist --extensions=php --ignore=/vendor,/node_modules $PWD",
    "test-ts": "tsc --noemit --noEmitOnError; eslint assets/src/**/*.ts",
    "test-php": "phpcs -p -s -v -n . --standard=phpcs.xml.dist --extensions=php --ignore=/tests,/vendor,/node_modules,/tribe,/tribe-events $PWD",
    "test-scss": "stylelint 'assets/src/scss/**/*.scss'",
    "fix-ts": "eslint assets/src/**/*.ts --fix",
    "fix-scss": "stylelint 'assets/src/scss/**/*.scss' --fix",
    "fix-php": "phpcbf -p -v . --standard=./phpcs.xml.dist --extensions=php --ignore=/vendor,/node_modules,/tribe,/tribe-events $PWD",
    "unit-php": "./vendor/bin/phpunit",
    "watch-scss": "gulp sass:watch --gulpfile compilers/gulpfile.mjs",
    "watch-ts": "vite build --config compilers/vite.config.ts --watch",
    "build-scss": "gulp sass --gulpfile compilers/gulpfile.mjs",
    "build-ts": "vite build --config compilers/vite.config.ts",
    "production": "vite build --config compilers/vite.config.ts && gulp sass --gulpfile compilers/gulpfile.mjs",
    "load": "composer dump-autoload -o"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:codedbyglenden/my-custom-blocks.git"
  },
  "devDependencies": {
	"@babel/preset-env": "^7.23.2",
    "@babel/preset-react": "^7.22.15",
    "@babel/preset-typescript": "^7.23.2",
    "@types/node": "^20.8.6",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.3",
    "@types/web": "^0.0.117",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "@vitejs/plugin-react": "^4.1.0",
    "@wordpress/stylelint-config": "^21.26.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.51.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-dart-sass": "^1.1.0",
    "gulp-merge-media-queries": "^0.2.1",
    "gulp-rename": "^2.0.0",
    "gulp-uglifycss": "^1.1.0",
    "jest": "^29.7.0",
    "path": "^0.12.7",
	"react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stylelint": "^14.2.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "dependencies": {
    "classnames": "^2.3.2"
  }
}
